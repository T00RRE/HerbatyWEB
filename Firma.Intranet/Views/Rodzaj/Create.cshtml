@model Firma.Data.Data.Rodzaj

@{
    ViewData["Title"] = "Dodaj Rodzaj";
}

<h1>Dodaj nowy rodzaj</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Nazwa Rodzaju</label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Opis</label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>