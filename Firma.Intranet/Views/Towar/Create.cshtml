@model Firma.Data.Data.Towar

@{
    ViewData["Title"] = "Dodaj Herbatę";
}

<h1>Dodaj nową herbatę</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div class="form-group mb-3">
                <label class="control-label">Nazwa Herbaty</label>
                <input asp-for="Nazwa" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Kod Towaru</label>
                <input asp-for="Kod" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Cena</label>
                <input asp-for="Cena" type="number" step="0.01" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Kategoria</label>
                <select asp-for="IdRodzaju" class="form-control" asp-items="ViewBag.ListaRodzajow"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Nazwa pliku zdjęcia (np. herbata.jpg)</label>
                <input asp-for="FotoURL" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Opis</label>
                <textarea asp-for="Opis" class="form-control"></textarea>
            </div>
            <div class="form-group" style="margin-top: 20px; margin-bottom: 20px;">
                <label class="control-label" style="font-weight:bold;">Wybierz Tagi:</label>
                <div class="card p-3">
                    @if (ViewBag.WszystkieTagi != null)
                    {
                        foreach (var tag in ViewBag.WszystkieTagi as List<Firma.Data.Data.Tag>)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox"
                                       name="wybraneTagi"
                                       value="@tag.IdTagu"
                                       id="tag_@tag.IdTagu">
                                <label class="form-check-label" for="tag_@tag.IdTagu">
                                    @tag.Nazwa
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-success">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </form>
    </div>
</div>